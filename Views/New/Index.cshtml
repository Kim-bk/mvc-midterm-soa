@model List<New>;
@{
    ViewData["Title"] = "newItem Page";
    var news = Model;
    var typeNewName = ViewBag.typeNewName;
}
@using ProductManager.Models;
<div class="text-center">
    <h1 class="display-4">Welcome To News Page</h1>
    <form asp-controller="New" asp-action="Index">

        <p>
            Search: <input type="text" name="searchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>

    <table class="table">
        <thead>
            <th>Id</th>
            <th>Title</th>
            <th>Image</th>
            <th>Content</th>
            <th>Slug</th>
            <th>TypeNew Name</th>
            @* <th>Option</th> *@
            <th><a href="/New/Create" class="btn btn-primary">Create </a></th>   
        </thead>
        <tbody> 
            @foreach (var newItem in news)
            {
                <tr>
                    <td>@newItem.Id</td>
                    <td>@newItem.Title</td>
                    <td style="width:10%"><img src="@newItem.Image" style="width:100%"></img></td>
                    <td>@newItem.Content</td>
                    <td>@newItem.Slug</td>
                    <td>@newItem.TypeNew.TypeNewName</td>
                    <td>
                    <a href="/New/Update?id=@newItem.Id" class="btn btn-success">Update</a>  
                    <a href="/New/Delete?id=@newItem.Id" class="btn btn-danger">Delete</a></td>      
                    @* <td>@newItem.Option</td> *@
                </tr>
            }
            
        </tbody>
    </table>
</div>
